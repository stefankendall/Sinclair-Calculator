<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns="http://www.w3.org/ns/widgets"
        xmlns:gap="http://phonegap.com/ns/1.0"
        id="com.stefankendall.sinclair"
        versionCode="1"
        version="1">
    <name>Sinclair Calculator</name>

    <description>
        Helps calculate the Sinclar, Siff, and Sinclair-Malone-Meltzer quotients
    </description>

    <author href="http://sinclair.stefankendall.com" email="sinclair@stefankendall.com">
        Stefan Kendall
    </author>

    <icon src="icons/icon-57x57.png" width="57" height="57"/>
    <icon src="icons/icon-72x72.png" width="72" height="72"/>
    <icon src="icons/icon-114x114.png" width="114" height="114"/>

    <gap:splash src="splashes/splash480x800.png" width="480" height="800"/>
    <gap:splash src="splashes/splash320x480.png" width="320" height="480"/>

    <preference name="permissions" value="none"/>
    <preference name="target-device" value="handset"/>
    <preference name="orientation" value="portrait" />
</widget>